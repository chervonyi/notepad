<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notepad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Notepad.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/text_0</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/Notepad.TabItem</item>
        <item name="tabTextColor">@drawable/tab_layout_selector</item>
        <item name="tabRippleColor">@color/tab_ripple_color</item>

    </style>

    <style name="Notepad.TabItem" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>